import '../../../../providers/counter_provider.dart'; 
import '../../../../screen/home_screen.dart';       
import 'package:flutter/material.dart';
import 'package:provider/provider.dart';

// Este es el punto de entrada que inicializar√°s
void main() {
  runApp(ChangeNotifierProvider(
    create: (_) => CounterProvider(), // Inicializaci√≥n del Provider
    child: const Ejercicio7App(),
  ));
}

class Ejercicio7App extends StatelessWidget {
  const Ejercicio7App({super.key});

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      debugShowCheckedModeBanner: false,
      title: 'Ejercicio 7 - Provider Counter',
      theme: ThemeData(primarySwatch: Colors.purple),

      home: const HomeScreen(), // Lanza la interfaz del ejercicio
    );
  }
}